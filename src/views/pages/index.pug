doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Spartan:wght@500;700&display=swap" rel="stylesheet">
        link(rel="stylesheet", href="css/style.css")
        title job page
    body 
        header.header
        main.main#main-card
            .card.card__filter.disable-filter#filter 
                .filter__clear Clear
                .filter__tag
            template#card-template
                .card
                    .card-header-body
                        .card__header 
                            img(src="./assets/images/photosnap.svg", alt="logo").card__img
                            h2.card__title Photosnap
                            span.card__label.disable-new#new NEW!
                            span.card__label.disable-featured#featured FEATURED
                        .card__body 
                            p.card__position Senior Frontend Developer 
                            .card__info 
                                span.card__job-info.postedAt 1d ago
                                span.card__job-info.contract full time
                                span.card__job-info.location USA only
                    .card__footer 
                        span.tag.tag--hover.role frontend
                        span.tag.tag--hover.level senior
                        //- span.card__tag.languages HTML
                        //- span.card__tag CSS
                        //- span.card__tag javascript

        script(src="js/script.js") 